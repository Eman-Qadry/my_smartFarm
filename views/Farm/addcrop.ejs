<%-include('../includes/head.ejs')%>
</head>
<style>
  @import url("https://fonts.googleapis.com/css?family=Montserrat:400,600&display=swap");

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  /* Global Styles */
  body {
    background-color: #ebe8e8;
    color: rgba(0, 0, 0, 0.8);
    display: flex;
    flex-direction: column;
    font-family: "Montserrat", sans-serif;
    font-size: 14px;
    font-weight: 400;
    height: 100vh;
   
  }

  .signup-container {
    display: grid;
    grid-template-areas: "left right";
    max-width: 900px;
    height: 600px;
    padding: 80px 0 20px 0;
    margin:auto
  }

  .left-container {
    background: #807182;
    overflow: hidden;
    position: relative;
    text-align: center;
    width: 350px;
  }

  .left-container h1 {
    color: rgba(0, 0, 0, 0.8);
    display: inline-block;
    font-size: 24px;
  }

  .left-container h1 i {
    background: #f2e2e1;
    border-radius: 50%;
    color: #807182;
    font-size: 24px;
    margin-right: 5px;
    padding: 10px;
    transform: rotate(-45deg);
  }

  .left-container .puppy {
    position: absolute;
    text-align: center;
    height: 100%;
  }

  .left-container .puppy:before {
    background: #807182;
    content: "";
    height: 100%;
    left: 0;
    opacity: 0.4;
    position: absolute;
    width: 100%;
    z-index: 1;
  }

  .left-container img {
   
    width: 100%;
    height: 600px;
  }

  .right-container {
    background: #e0d8d7;
    display: grid;
    grid-template-areas: "." ".";
    width: 600px;
  }

  .right-container h1:nth-of-type(1) {
    color: rgba(0, 0, 0, 0.8);
    font-size: 28px;
    font-weight: 600;
  }

  .right-container .set {
    display: flex;
    justify-content: space-between;
    margin: 10px 0;
  }

  .right-container input {
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 4px;
    height: 38px;
    line-height: 38px;
    padding-left: 5px;
  }

  .right-container input,
  .right-container label {
    color: rgba(0, 0, 0, 0.8);
  }

  .right-container .header {
    padding: 40px;
  }

  .right-container label,
  .right-container input,
  .right-container .pets-photo {
    width: 176px;
  }

  .right-container .pets-photo {
    align-items: center;
    display: grid;
    grid-template-areas: ". .";
  }

  .right-container .pets-photo button {
    border: none;
    border-radius: 50%;
    height: 38px;
    margin-right: 10px;
    outline: none;
    width: 38px;
  }

  .right-container .pets-photo button i {
    color: rgba(0, 0, 0, 0.8);
    font-size: 16px;
  }

  .right-container .pets-weight .radio-container {
    display: flex;
    justify-content: space-between;
    width: 100%;
  }

  .right-container footer {
    align-items: center;
    background: #fff;
    display: grid;
    margin-top: 50px;
    padding: 5px 40px;
  }

  .right-container footer button {
    border: 1px solid rgba(0, 0, 0, 0.2);
    height: 38px;
    line-height: 38px;
    width: 100px;
    border-radius: 19px;
    font-family: "Montserrat", sans-serif;
  }

  .right-container footer #back {
    background: #fff;
    transition: 0.2s all ease-in-out;
  }

  .right-container footer #back:hover {
    background: #171A2B;
    color: white;
  }

  .right-container footer #next {
    background: #807182;
    border: 1px solid transparent;
    color: #fff;
  }

  .right-container footer #next:hover {
    background: #171A2B;
  }

  .pets-name label,
  .pets-breed label,
  .pets-birthday label,
  .pets-gender label,
  .pets-spayed-neutered label,
  .pets-weight label {
    display: block;
    margin-bottom: 5px;
  }

  .radio-container {
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 4px;
    display: inline-block;
    padding: 5px;
  }

  .radio-container label {
    background: transparent;
    border: 1px solid transparent;
    border-radius: 2px;
    display: inline-block;
    height: 26px;
    line-height: 26px;
    margin: 0;
    padding: 0;
    text-align: center;
    transition: 0.2s all ease-in-out;
    width: 80px;
  }

  .radio-container input[type=radio] {
    display: none;
  }

  .radio-container input[type=radio]:checked+label {
    background: #F7B1AB;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }
</style>

<body>
  <%- include('../includes/nav.ejs') %>
  <div class='signup-container'>
    <div class='left-container'>
      <div class='puppy'>
        <img src='/imgs/crop.jpg'>
      </div>
    </div>
    <div class='right-container'>
      <form id="addFarm" action="/farm/<%=farmId%>/add-crop" method="POST" enctype="multipart/form-data" >
        <div class="header">
          <h1>Ensure adding correct information</h1>
          <div class='set'>
            <div class='pets-name'>
              <label for='pets-name'>Name</label>
              <input id='pets-name' placeholder="crop name" type='text' name="name" required>
            </div>
            <div class='pets-photo'>
              <button type="button" onclick="document.getElementById('pets-upload').click();">
                <i class='fa fa-solid fa-camera'></i>
              </button>
              <input id='pets-upload' type='file' name='file' accept="image/*" style="display:none;">
              <label for='pets-upload'>Upload a photo</label>
            </div>
          </div>
          <div class='set'>
            <div class='pets-breed'>
              <label for='pets-breed'>type</label>
              <input id='pets-breed' placeholder="crop type" type='text' name="type" required>
            </div>
            <div class='pets-birthday'>
              <label for='pets-birthday'>season</label>
              <input id='pets-birthday' placeholder='crop season' type='text' name="season" required>
            </div>
          </div>
          <div class='set'>
            <div class='pets-gender'>
              <label for='pet-gender-female'>planting Date</label>
              <div class='radio-container'>
                <input type="date" id='pet-gender-female' name='plantingDate'required >
              </div>
            </div>
          </div>
          <div class='pets-weight'>
            <label for='pet-weight-00-25'>Soil type</label>
            <div class='radio-container'>
              <input id='pet-weight-0-25' name='soilType' type='radio' value='Sandy'>
              <label for='pet-weight-0-25' onclick="highlightSelected('pet-weight-0-25')">Sandy</label>
              <input id='pet-weight-25-50' name='soilType' type='radio' value='Chalky'>
              <label for='pet-weight-25-50' onclick="highlightSelected('pet-weight-25-50')">Chalky</label>
              <input id='pet-weight-20-50' name='soilType' type='radio' value='loam'>
              <label for='pet-weight-20-50' onclick="highlightSelected('pet-weight-20-50')">Loam</label>
              <input id='pet-weight-50-100' name='soilType' type='radio' value='Clay'>
              <label for='pet-weight-50-100' onclick="highlightSelected('pet-weight-50-100')">Clay</label>
              <input id='pet-weight-100-150' name='soilType' type='radio' value='Silt'>
              <label for='pet-weight-100-150' onclick="highlightSelected('pet-weight-100-150')">Silt</label>
              <input id='pet-weight-10-150' name='soilType' type='radio' value='Peat'>
              <label for='pet-weight-10-150' onclick="highlightSelected('pet-weight-10-150')">Peat</label>
            </div>
          </div>
        </div>
    </form>
        <footer>
          <div class='set'>
            <button onclick="goBack()" id='back'>Back</button>
            <button onclick="go()"id='next'>Next</button>
          
          </div>
       
        </footer>
      </div>
    </div>
    <%-include('../includes/footer.ejs')%>
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script>
    function goBack() {
      window.history.back();
  }
  function go() {
    document.getElementById('addFarm').submit();
}
    function highlightSelected(selectedId) {
      // Get all radio buttons
      const radios = document.querySelectorAll('.radio-container input[type="radio"]');
      
      radios.forEach(radio => {
        // Get corresponding label for each radio button
        const label = document.querySelector(`label[for="${radio.id}"]`);
        
        // Check if the current radio button is selected or not
        if (radio.id === selectedId) {
          label.style.color = 'red'; // Highlight the selected label
        } else {
          label.style.color = 'black'; // Reset the color of non-selected labels
        }
      });
    }
  </script>
</body>

</html>
