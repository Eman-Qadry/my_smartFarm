<%-include('../includes/head.ejs')%>

</head>

<body class="login-page">
    
    <div class="container-fluid login">
        <% if (errorMessage){ %>
            <div class="user-message user-message--error"> <%=errorMessage%></div>
            <%
           } %>
        <div class="row">

            <div class="col-md-6 d-flex justify-content-center align-items-center">
                <img src="imgs/login.png" alt="Login Image" class="img-fluid" style="height: 700px;">
            </div>

            <div class="col-md-6 col-lg-4 d-flex justify-content-center align-items-center">
                <div class="form-container">
                    <form id="login-form" action="/login" method="POST">
                        <h1 class="font-weight-bold">Login</h1>
                        <div class="inputField">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text input-group-addon"><i class="fas fa-envelope"></i>
                                        </span>
                                    </div>
                                    <input type="email" class="form-control" name =email id="email" placeholder="Email address"
                                        required>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text input-group-addon"><i
                                                    class="fas fa-lock"></i></span>
                                        </div>
                                        <input type="password" class="form-control" id="password" name="password"
                                            placeholder="Password" required>
                                    </div>
                                </div>

                            

                                <div class="form-row">
                                    <div class="form-group col-md-6 ">
                                       
                                    </div>
                                    <div class="form-group col-md-6 text-right">
                                        <a href="/reset" style="text-decoration:none; padding-left:20%;">Forgot Password?</a>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn-login">Login</button>
                            <p class="switch-form">Don't have an account?<a href="/signup" style="text-decoration:none;"
                                    id="switch-to-login">SignUp</a></p>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

</body>
</html>